<div class="bgImage"></div>
<div class="main">
	<div class="h1ElementWhite">
		<h1> HOSPITAL INFORMATION </h1>
	</div>

	<div class="addForm">
		<h3> ADD HOSPITAL </h3>
		<form id="insert1">
			Hospital Name:<br>
			<input type="text" name="hospitalNameInput"><br>
			Hospital Address Street:<br>
			<input type="text" name="hospitalStreetInput"><br>
			Hosptial Address City:<br>
			<input type="text" name ="hospitalCityInput"><br>
			Hospital Address State:<br>
			<input type="text" name="hospitalStateInput"><br>
			Hospital Address Zipcode:<br>
			<input type="text" name="hospitalZipcodeInput"><br>
			Hospital Address Country:<br>
			<input type="text" name="hospitalCountryInput"><br>
			<input type="submit" value="Submit" id="addHospitalBtn">
		</form>

		<h3>Table with update and delete buttons</h3>
		
		<table border="1" id = "hospitalTable">
		<thead>
			<th>Hospital Name</th>
			<th>Street</th>
			<th>City</th>
			<th>State</th>
			<th>Zipcode</th>
			<th>Country</th>
			<th>Edit</th>
			<th>Delete</th>
		</thead>
		<tbody>
			{{#each results}}
				<tr>
					<td>{{this.hospitalName}}</td>
					<td>{{this.street}}</td>
					<td>{{this.city}}</td>
					<td>{{this.state}}</td>
					<td>{{this.zipcode}}</td>
					<td>{{this.country}}</td>
					<td><a href="/editTable?id={{this.id}}"><input type="button" type="button" value="edit"></a></td>
					<td><button type="button" onclick="deleteHospitalTableRow({{this.hospitalID}})">DELETE</button></td>
			
				</tr>
			{{/each}}
                </tbody>

		</table>
	</div>

	

</div>
