<div class="main">
	<div class="h1ElementWhite">
		<h1> HOSPITAL INFORMATION </h1>
	</div>

	<div class="addForm">
		<h3> ADD HOSPITAL </h3>
		<form id="addHospital" action="/hospital" method="post">
			Hospital Name:<br>
			<input type="text" name="hospitalNameInput"><br>
			Hospital Address Street:<br>
			<input type="text" name="hospitalStreetInput"><br>
			Hosptial Address City:<br>
			<input type="text" name ="hospitalCityInput"><br>
			Hospital Address State:<br>
			<input type="text" name="hospitalStateInput"><br>
			Hospital Address Zipcode:<br>
			<input type="text" name="hospitalZipcodeInput"><br>
			Hospital Address Country:<br>
			<input type="text" name="hospitalCountryInput"><br>
			<input type="submit" value="Submit" id="addHospitalBtn">
		</form>
	</div>

	
	
	
	<div class="addForm">
		<h3>SEARCH HOSPITAL BY CITY</h3>
		<form id='searchHospital' action='' method=''>
			Search Hospital By City:
			<input id='hospitalCityString' type='text' name='hospitalCityString' ><br>
			<div class= searchBtn>
				<input type="button" value="Search" onclick="searchHospitalByCity()">
			</div>
		</form>


		<h3>All Hospitals In Database</h3>
		
		<table border="1" id = "hospitalTable">
		<thead>
			<th>Hospital Name</th>
			<th>Street</th>
			<th>City</th>
			<th>State</th>
			<th>Zipcode</th>
			<th>Country</th>
			<th>Edit</th>
			<th>Delete</th>
		</thead>
		<tbody>
			{{#each hospitals}}
				<tr>
					<td>{{hospitalName}}</td>
					<td>{{street}}</td>
					<td>{{city}}</td>
					<td>{{state}}</td>
					<td>{{zipcode}}</td>
					<td>{{country}}</td>
					<td><a href="/hospital/{{hospitalID}}">Update</a></td>
					<td><button type="button" onclick="deleteHospital({{hospitalID}})">DELETE</button></td>
			
				</tr>
			{{/each}}
                </tbody>

		</table>
	</div>

	

</div>
</html>
