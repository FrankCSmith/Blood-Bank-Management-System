<div class="main">
    <div class="h1ElementWhite">
        <h1> BLOOD PRODUCT INFORMATION </h1>
    </div>
    <div class="addForm">
        <h3> ADD BLOOD PRODUCT </h3>
        <form id="addBloodProduct" action="/blood_product" method="post">
            Product Type:<br>
            <input type="text" name="typeProductInput"><br>
            Product ABO/Rh:<br>
            <input type="text" name="productABORhInput"><br>
            Donor Unit ID Bar Code:<br>
            <input type="text" name="donorUnitIDBarCodeInput"><br>
            Donor Unit Product Code:<br>
            <input type="text" name="donorUnitProductCodeInput"><br>
            Unit Arrval (DATE):<br>
            <input type="date" name="unitArrivalInput"><br>
            Unit Expiration (DATE):<br>
            <input type="date" name="unitExpirationInput"><br>
            Unit History:<br>
            <input type="text" name="unitHistoryInput"><br>
            Hospital Source:<br>
            <input type="text" name="hospitalSourceInput"><br>
            Supplier Source:<br>
            <input type="text" name="supplierSourceInput"><br>
            <input type="submit" value="Submit" id="addBloodProductBtn">
        </form>

        <h3>Table with update and delete buttons</h3>

        <table border="1" id = "bloodProductTable">
        <thead>
            <th>Blood Product Type</th>
            <th>ABO/Rh</th>
            <th>Unit ID</th>
            <th>Product Code</th>
            <th>Arrival Date</th>
            <th>Expiration Date</th>
            <th>Current Status</th>
            <th>Hospital Source</th>
            <th>Supplier Source</th>
            <th>Delete</th>
        </thead>
        <tbody>
            {{#each blood_products}}
                <tr>
                    <td>{{typeProduct}}</td>
                    <td>{{productABORh}}</td>
                    <td>{{donorUnitIDBarCode}}</td>
                    <td>{{donorUnitProductCode}}</td>
                    <td>{{unitArrival}}</td>
                    <td>{{unitExpiration}}</td>
                    <td>{{unitHistory}}</td>
                    <td>{{hospitalSource}}</td>
                    <td>{{supplierSource}}</td>
                    <td><button type="button" onclick="deleteBlood_Product({{productID}})">DELETE</button></td>
                </tr>
            {{/each}}
        </tbody> 
        </table>
    </div>

</div>
