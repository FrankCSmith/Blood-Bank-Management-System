<div class="main">
    <div class="h1ElementWhite">
        <h1> ANTIGEN INFORMATION </h1>
    </div>
    <div class="addForm">
        <h3> ADD ANTIGEN </h3>
        <form id = "addAntigen" action="/antigen" method="post">
            Antigen Name:<br>
            <input type="text" name="antigenNameInput"><br>
            Antigen System:<br>
            <input type="text" name="antigenSystemInput"><br>
            Antigen Frequency:<br>
            <input type="text" name="antigenFrequencyInput"><br>
            Dosage:<br>
            <input type="text" name="dosageInput"><br>
            <input type="submit" value="Submit" id="addAntigenBtn">
        </form>

        <h3>Table with update and delete buttons</h3>
        
        <table border="1" id = "antigenTable">
        <thead>
            <th>Antigen Name</th>
            <th>Antigen System</th>
            <th>Frequency</th>
            <th>Dosage</th>
            <th>Delete</th>
        </thead>
        <tbody>
            {{#each antigens}}
                <tr>
                    <td>{{antigenName}}</td>
                    <td>{{antigenSystem}}</td>
                    <td>{{antigenFrequency}}</td>
                    <th>{{dosage}}</td>
                    <td><button type="button" onclick="deleteAntigen({{antigenID}})">DELETE</button></td>
                </tr>
            {{/each}}
        </tbody> 
        </table>
    </div>

</div>

