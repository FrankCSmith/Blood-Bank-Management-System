<div class="main">
    <div class="h1ElementWhite">
        <h1> ANTIGEN INFORMATION </h1>
    </div>
    <div class="addForm">
        <h3> ADD ANTIGEN </h3>
        <form id = "insert6">
            Antigen Name:<br>
            <input type="text" name="antigenNameInput"><br>
            Antigen System:<br>
            <input type="text" name="antigenSystemInput"><br>
            Antigen Frequency:<br>
            <input type="text" name="antigenFrequencyInput"><br>
            Dosage:<br>
            <input type="text" name="dosageInput"><br>
            <input type="submit" value="Submit" id="addAntigenBtn">
        </form>

        <h3>Table with update and delete buttons</h3>
        
        <table border="1" id = "antigenTable">
        <thead>
            <th>Antigen Name</th>
            <th>Antigen System</th>
            <th>Frequency</th>
            <th>Dosage</th>
            <th>Edit</th>
            <th>Delete</th>
        </thead>
        <tbody>
            {{#each results}}
                <tr>
                    <td>{{this.antigenName}}</td>
                    <td>{{this.antigenSystem}}</td>
                    <td>{{this.antigenFrequency}}</td>
                    <th>{{this.dosage}}</td>
                    <td><a href="/editTable?id={{this.id}}"><input type="button" type="button" value="edit"></a></td>
                    <td><button type="button" onclick="deleteAntigenTableRow({{this.antigenID}})">DELETE</button></td>
            
                </tr>
            {{/each}}
        </tbody> 
        </table>
    </div>

</div>

