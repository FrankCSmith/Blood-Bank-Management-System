<div class="main">
    <div class="h1ElementWhite">
        <h1> STORES INFORMATION </h1>
    </div>
    <div class="addForm">
        <h3> ADD STORES </h3>
        <form id ="addStores" action="/stores" method="post">
            Hospital Key:<br>
            <input type="text" name="hospitalKeyInput"><br>
            Product Key:<br>
            <input type="text" name="productKeyInput"><br>
            <input type="submit" value="Submit" id="addStoresBtn">
        </form>

        <h3>All Stores in Database</h3>
        
        <table border="1" id = "storesTable">
        <thead>
            <th>hospitalKey</th>
            <th>productKey</th>
            <th>Delete</th>
        </thead>
        <tbody>
            {{#each stores}}
                <tr>
                    <td>{{hospitalKey}}</td>
                    <td>{{productKey}}</td>
                    <td><button type="button" onclick="deleteStores({{id}})">DELETE</button></td>
                </tr>
            {{/each}}
        </tbody> 
        </table>
    </div>

