<div class="main">
    <div class="h1ElementWhite">
        <h1> ANTIGEN HISTORY INFORMATION </h1>
    </div>
    <div class="addForm">
        <h3> ADD ANTIGEN HISTORY </h3>
        <form id = "insert5">
            Product Key:<br>
            <input type="text" name="productKeyInput"><br>
            Antigen Key:<br>
            <input type="text" name="antigenKeyInput"><br>
            Date Of History (DATE):<br>
            <input type="date" name="dateOfHistoryInput"><br>
            <input type="submit" value="Submit" id="addAntigenHistoryBtn">
        </form>

        <h3>Table with update and delete buttons</h3>

        <table border="1" id = antigenHistoryTable>
        <thead>
            <th>productKey</th>
            <th>antigenKey</th>
            <th>dateOfHistory</th>
            <th>Edit</th>
            <th>Delete</th>
        </thead>
        <tbody>
            {{#each results}}
                <tr>
                    <td>{{this.productKey}}</td>
                    <td>{{this.antigenKey}}</td>
                    <td>{{this.dateOfHistory}}</td>
                    <td><a href="/editTable?id={{this.id}}"><input type="button" type="button" value="edit"></a></td>
                    <td><button type="button" onclick="DeleteTableRow({{this.id}})">DELETE</button></td>
            
                </tr>
            {{/each}}
        </tbody> 
        </table>
    </div>

</div>