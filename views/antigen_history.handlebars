<div class="main">
    <div class="h1ElementWhite">
        <h1> ANTIGEN HISTORY INFORMATION </h1>
    </div>
    <div class="addForm">
        <h3> ADD ANTIGEN HISTORY </h3>
        <form id = "addAntigenHistory" action="/antigen_history" method="post">
            Product Key:<br>
            <input type="text" name="productKeyInput"><br>
            Antigen Key:<br>
            <input type="text" name="antigenKeyInput"><br>
            Date Of History (DATE):<br>
            <input type="date" name="dateOfHistoryInput"><br>
            <input type="submit" value="Submit" id="addAntigenHistoryBtn">
        </form>

        <h3>Antigen History For Each Blood Product</h3>

        <table border="1" id = antigenHistoryTable>
        <thead>
            <th>productKey</th>
            <th>antigenKey</th>
            <th>dateOfHistory</th>
            <th>Delete</th>
        </thead>
        <tbody>
            {{#each antigen_histories}}
                <tr>
                    <td>{{productKey}}</td>
                    <td>{{antigenKey}}</td>
                    <td>{{dateOfHistory}}</td>
                    <td><button type="button" onclick="deleteAntigen_History({{antigenHistoryID}})">DELETE</button></td>
            
                </tr>
            {{/each}}
        </tbody> 
        </table>
    </div>

</div>
